<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <!-- Create plan_versions table -->
    <changeSet id="018-create-plan-versions-table" author="projects-module">
        <createTable tableName="plan_versions">
            <column name="version_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_plan_versions_tenant" references="tenants(id)"/>
            </column>
            <column name="task_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_plan_versions_task" references="tasks(task_id)"/>
            </column>
            <column name="version_number" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="version_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="is_current" type="BIT" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="activate_flag" type="BIT" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="BIGINT"/>
            <column name="created_on" type="DATETIME2" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="BIGINT"/>
            <column name="updated_on" type="DATETIME2"/>
        </createTable>

        <!-- Indexes for performance -->
        <createIndex indexName="idx_plan_versions_tenant_id" tableName="plan_versions">
            <column name="tenant_id"/>
        </createIndex>

        <createIndex indexName="idx_plan_versions_task_id" tableName="plan_versions">
            <column name="tenant_id"/>
            <column name="task_id"/>
        </createIndex>

        <createIndex indexName="idx_plan_versions_tenant_active" tableName="plan_versions">
            <column name="tenant_id"/>
            <column name="activate_flag"/>
        </createIndex>
    </changeSet>

    <!-- Create plan_lines table -->
    <changeSet id="018-create-plan-lines-table" author="projects-module">
        <createTable tableName="plan_lines">
            <column name="line_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_plan_lines_tenant" references="tenants(id)"/>
            </column>
            <column name="version_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_plan_lines_version" references="plan_versions(version_id)"/>
            </column>
            <column name="task_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_plan_lines_task" references="tasks(task_id)"/>
            </column>
            <column name="line_number" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="planned_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="planned_qty" type="DECIMAL(18,2)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="activate_flag" type="BIT" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="BIGINT"/>
            <column name="created_on" type="DATETIME2" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="BIGINT"/>
            <column name="updated_on" type="DATETIME2"/>
        </createTable>

        <!-- Indexes for performance -->
        <createIndex indexName="idx_plan_lines_tenant_id" tableName="plan_lines">
            <column name="tenant_id"/>
        </createIndex>

        <createIndex indexName="idx_plan_lines_version_id" tableName="plan_lines">
            <column name="tenant_id"/>
            <column name="version_id"/>
        </createIndex>

        <createIndex indexName="idx_plan_lines_task_id" tableName="plan_lines">
            <column name="tenant_id"/>
            <column name="task_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

