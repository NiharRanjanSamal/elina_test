<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="009-create-user-authorizations-table" author="authorization-module">
        <createTable tableName="user_authorizations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_auth_user" references="users(id)"/>
            </column>
            <column name="resource_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="resource_id" type="VARCHAR(255)"/>
            <column name="permission_type" type="VARCHAR(50)"/>
            <column name="is_allowed" type="BIT" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="conditions" type="VARCHAR(1000)"/>
            <column name="created_at" type="DATETIME2">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME2"/>
        </createTable>

        <createIndex indexName="idx_user_auth_resource" tableName="user_authorizations">
            <column name="user_id"/>
            <column name="resource_type"/>
            <column name="resource_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

